    <bean id="musicBean1"
          class="ru.popov.springcourse.RockMusic"
          scope="prototype"
          init-method="doMyInit"
          destroy-method="doMyDestroy">
    </bean>

    <bean id="musicBean2"
          class="ru.popov.springcourse.ClassicalMusic"
          init-method="doMyInit"
          destroy-method="doMyDestroy"
          factory-method="getClassicalMusic">
    </bean>

    <bean id="musicBean3"
          class="ru.popov.springcourse.RapMusic"
          scope="prototype"
          init-method="doMyInit"
          destroy-method="doMyDestroy">
    </bean>

